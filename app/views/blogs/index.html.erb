<div id="home_art">
	<%= image_tag("home_art.jpg", :alt => "Home art") %>
</div>
<div id="mailchimp_signup">
	
	<% if admin? %>
	<%= link_to "[Logout]", logout_path %>
	<%= link_to "[config mailinglist]", "https://login.mailchimp.com/"%>
	<% else %>	
	<%= link_to '[login]', login_path %>
	<% end %>
	<%= link_to "[rss]", rss_link %>

	<%= render "mailchimp_signup"%>
</div>
<ul class="news_feed">
	<h1><span class="text_shadow">News</span></h1>
	
	<% flash.each do |key, msg| %>
	    <%= content_tag :div, msg, :class => [key, " message"], :id => "notice_#{key}" %>
	    <%= content_tag :script, :type => "text/javascript" do -%>
	        setTimeout("new Effect.Fade('notice_<%= key %>');", 1500);
	    <% end %>
	<% end %>
		
	<% if admin? %>
	<div class="admin_options">
		<h4><%= link_to '[New Post]', new_blog_path %></h4>
	</div>
	<% end %>
	
	<%= paginate @blogs %>
<% @blogs.each do |blog| %>
<li>
	<ul class="news_feed news_feed_post">	
    <li><h1><%= link_to blog.title, blog %></h1></li>
	<li><h4><%= blog.created_at.strftime("%A %d %b %Y") %></h4></li>
    <li><p><%= simple_format(auto_link(blog.content)) %></p></li>
	<% if admin? %>
	<div class="admin_options">
		<h4><%= link_to '[Edit]', edit_blog_path(blog) %>
	    <%= link_to '[Destroy]', blog, :confirm => 'Are you sure?', :method => :delete %></h4>
	</div>
	<% end%>
	</ul>
	
</li>
<% end %>
<%= paginate @blogs %>
</ul>


