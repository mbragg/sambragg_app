<%#= paginate @blogs, :remote => true %>

<% @blogs.each do |blog| %>
<li>
	<ul class="news_feed news_feed_post">	
    <li><h1><%= link_to blog.title, blog %></h1></li>
	<li><h4><%= blog.created_at.strftime("%A %d %b %Y") %></h4></li>
    <li><p><%= simple_format(auto_link(blog.content)) %></p></li>
	<% if admin? %>
	<div class="admin_options">
		<h4><%= link_to '[Edit]', edit_blog_path(blog) %>
	    <%= link_to '[Destroy]', blog, :confirm => 'Are you sure?', :method => :delete %></h4>
	</div>
	<% end %>
	</ul>
</li>
<% end %>
