<!DOCTYPE html>
<html>
<head>
  <title>Sam Bragg | <%= @head_title %></title>

  <%= render 'layouts/stylesheets' %>
  <%#= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" %>
  <%= javascript_include_tag :defaults %>
  <%#= javascript_include_tag "lightbox.js" %>
  <%= csrf_meta_tag %>
  <%= auto_discovery_link_tag(:rss, rss_link) %>

<script type="text/javascript"
    src="http://maps.google.com/maps/api/js?sensor=false">
</script>

</head>
<body onload="initialize()">
	<div class="container">
		<header>
			<%= link_to image_tag("sambragg_logo.png", :alt => "Sam Bragg"), root_path %>		
			
			
		</header>
		<nav>
			<ul>
				<li<%= " class='selected'" if current_controller?("blogs") %>><%= link_to "News", root_path %></li>
				<li<%= " class='selected'" if current_controller?("about") %>><%= link_to "About", about_path %></li>
   				<li<%= " class='selected'" if current_controller?("gigs") %>><%= link_to "Gigs", gigs_path %></li>
				<li<%= " class='selected'" if current_controller?("music") %>><%= link_to "Music", '#' %></li>
				<li<%= " class='selected'" if current_controller?("photos") %>><%= link_to "Photos", '#' %></li>
				<li<%= " class='selected'" if current_controller?("contact") %>><%= link_to "Contact", '#' %></li>
			</ul>
		</nav>
		
		
		<section class="round">
			<%= yield %>
		</section>
		<%#= render 'layouts/footer' %>
			
	</div>


</body>
</html>
